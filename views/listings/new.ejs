<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col col-8 offset-2">
    <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <h3>Add new listing</h3>
            <div>
                <label for="title" class="form-label">Title</label>
                <input type="text" name="list[title]" placeholder="enter title" id="title" class="form-control" required>
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Title should be valid</div>
            </div>
            <div>
                <label for="image" class="form-label" class="form-label">Upload Image</label>
                <input type="file" name="list[image]"  class="form-control" required>
                <div class="invalid-feedback">Image should be valid</div>

            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="country" class="form-label" class="form-control">Country</label>
                    <input type="text" name="list[country]" placeholder="enter country" id="country" class="form-control" required>
                    <div class="invalid-feedback">Country should be valid</div>

                </div>
                <div class="col-md-8">
                    <label for="price" class="form-label">price</label>
                    <input type="number" name="list[price]" placeholder="enter price" id="price" class="form-control" required>
                    <div class="invalid-feedback">price should be valid</div>

                </div> 
            </div>
            <div>
                <label for="location" class="form-label">Location</label>
                <input type="text" name="list[location]" placeholder="enter location" class="form-control" id="location" required>
                <div class="invalid-feedback">Location should be valid</div>

            </div>
            <div>
                <label for="desc" class="form-label">Description</label>
                <textarea name="list[description]" id="desc" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a short desciption</div>

            </div>
            <br>
            <div>
                <button class="btn btn-dark addbtn">sumbit</button>
            </div>
            <br><br>
        </form>
    </div>
</div>


</body>
</html>