<% layout("/layouts/boilerplate")%>
<style>
  .filter{
    margin-top: 1rem;
    margin-right:1rem;
    text-align:center;
    opacity:0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  #filters{
    display: flex;
    flex-wrap:wrap;
    align-items: center;

  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-toggle{
    display: flex;
    align-items: center;
    margin-left:3rem;
    border:2px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
  }
</style>
<body>
    <!-- <h3>all listings</h3> -->
    <!-- <form action="/listings/new" method="GET">
        <button>Create new listing</button>
    </form> -->
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>     
     <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Amenities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-wifi"></i></div>
        <p>Wifi</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Mountaines</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Cities</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let i of alllistings) {%>
        <a href="listings/<%=i._id%>" class="listing-link">
            <div class="card col" style="width: 20rem;">
                <img src="<%= i.image.url%>" class="card-img-top" alt="listing image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=i.title%></b><br>
                    &#8377;<%=i.price.toLocaleString("en-IN")%>
                    <i class="tax-info">&nbsp;+18% GST</i>
                  </p>
                </div>
              </div>
            </a>
    <%}%>
    </div>
    <script>
      let pricechanger=document.getElementById("flexSwitchCheckDefault");
      pricechanger.addEventListener("click", ()=>{
        let infos=document.getElementsByClassName("tax-info");
        for(info of infos){
          if(info.style.display != "inline"){
            info.style.display="inline";
          }
          else{
            info.style.display="none";
          }
        }
      })


    </script>
</body>
</html>